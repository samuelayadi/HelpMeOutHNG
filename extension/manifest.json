{
  "manifest_version": 3,
  "name": "HelpMeOut",
  "version": "1.0",
  "description": "Record your screen with this extension",
  "permissions": ["desktopCapture", "activeTab", "storage", "scripting", "tabs"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "32": "/images/logo.jpg"
    }
  },
  "icons": {
    "128": "/images/logo.jpg"
  },
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "http://*/",
    "https://*/*"
  ]
}
